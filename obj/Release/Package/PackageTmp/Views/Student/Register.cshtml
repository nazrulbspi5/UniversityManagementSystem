@model UoUWebApp.Models.StudentModel

@{
    ViewBag.Title = "Register Student";
    ViewBag.ContentTitle = "Register Student";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="~/assets/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
}

@using (Html.BeginForm("register", "student", FormMethod.Post, new { @class = "form", role = "role" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-sm-12 text-right">
            @Html.ActionLink("Student List", "Index")
        </div>
    </div>
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.StudentName, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"></span>
                        @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control black" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        @if (Model != null && !String.IsNullOrEmpty(Model.StudentRegNo))
        {
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.StudentRegNo, htmlAttributes: new { @class = "control-label" })
                        <div class="input-group">
                            <span class="input-group-addon"></span>
                            @Html.EditorFor(model => model.StudentRegNo, new { htmlAttributes = new { @class = "form-control black", disabled = "disabled" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.StudentRegNo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.StudentEmail, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"></span>
                        @Html.EditorFor(model => model.StudentEmail, new { htmlAttributes = new { @class = "form-control black" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.StudentEmail, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-sm-4">
                <div class="form-group" style="padding-right: 5px; padding-left: 5px;">
                    @Html.LabelFor(model => model.StudentContact, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"></span>
                        @Html.EditorFor(model => model.StudentContact, new { htmlAttributes = new { @class = "form-control black" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.StudentContact, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.RegDate, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"></span>
                        @Html.TextBoxFor(model => model.RegDate, "{0:MM/dd/yyyy}", new { @class = "form-control black" })
                    </div>
                    @Html.ValidationMessageFor(model => model.RegDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.StudentAddress, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"></span>
                        @Html.EditorFor(model => model.StudentAddress, new { htmlAttributes = new { @class = "form-control black" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.StudentAddress, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(model => model.StudentDeptId, htmlAttributes: new { @class = "control-label" })
                    <div class="input-group">
                        <span class="input-group-addon"></span>
                        @Html.DropDownListFor(model => model.StudentDeptId, null, "--Select--", htmlAttributes: new { @class = "form-control black" })
                    </div>
                    @Html.ValidationMessageFor(model => model.StudentDeptId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Register" class="btn btn-success" />
        </div>
    </div>
}

@section Scripts{
    @Html.Partial("~/Views/Shared/_jQueryValidatorBootstrapStyle.cshtml")
    <script src="~/assets/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(function () {
            $('#RegDate').datepicker();
        });
    </script>
}
